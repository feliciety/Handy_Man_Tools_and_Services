<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="780.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.BookingPageController">
    <children>
        <VBox layoutX="708.0" layoutY="174.0" prefHeight="530.0" prefWidth="467.0" spacing="10.0">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Name Field -->
            <Label text="Name:" />
            <TextField fx:id="nameField" prefWidth="446.0" promptText="Enter your name" />

            <!-- Address Field -->
            <Label text="Address:" />
            <TextField fx:id="addressField" promptText="Enter your address" />

            <!-- Date Picker -->
            <Label text="Date:" />
            <DatePicker fx:id="datePicker" prefHeight="26.0" prefWidth="221.0" />

            <!-- Time ComboBox -->
            <Label text="Time:" />
            <ComboBox fx:id="timeComboBox" promptText="Select a time" />

            <!-- Severity Options -->
            <Label text="Severity:" />
            <HBox prefHeight="18.0" prefWidth="443.0" spacing="10.0">
                <RadioButton fx:id="lowSeverity" text="Low" />
                <RadioButton fx:id="mediumSeverity" text="Medium" />
                <RadioButton fx:id="highSeverity" text="High" />
            </HBox>

            <!-- Schedule Button -->
            <Button fx:id="scheduleTimeButton" onAction="#handleScheduleTimeClick" prefWidth="230.0" text="Schedule Time" />
        </VBox>
      <AnchorPane layoutX="35.0" layoutY="88.0" prefHeight="521.0" prefWidth="629.0">
         <styleClass>
            <String fx:value="white-bg" />
            <String fx:value="shadow" />
         </styleClass>
         <children>
            <TableView layoutY="62.0" prefHeight="453.0" prefWidth="624.0">
              <columns>
                <TableColumn prefWidth="206.40002059936523" text="Image" />
                <TableColumn prefWidth="136.80003356933594" text="Employee Name" />
                  <TableColumn prefWidth="156.79998779296875" text="Service" />
                  <TableColumn prefWidth="126.933349609375" text="Status" />
              </columns>
            </TableView>
            <TextField alignment="CENTER" layoutX="2.0" layoutY="18.0" prefHeight="30.0" prefWidth="213.0" promptText="Search Employee" />
         </children>
      </AnchorPane>
    </children>
</AnchorPane>
