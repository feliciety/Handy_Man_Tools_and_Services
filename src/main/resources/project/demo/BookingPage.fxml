<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="651.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.BookingPageController">
   <children>
      <VBox spacing="10.0">
      
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
                            <TableView fx:id="employeeTable">
              <columns>
                  <TableColumn fx:id="imageColumn" text="Photo" />
                  <TableColumn fx:id="nameColumn" text="Name" />
                  <TableColumn fx:id="serviceColumn" text="Service" />
                  <TableColumn fx:id="statusColumn" text="Status" />
              </columns>
          </TableView>
      
                            <VBox fx:id="bookingPane" spacing="10.0">
              <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
              </padding>
              <Label text="Name:" />
              <TextField fx:id="nameField" />
              <Label text="Address:" />
              <TextField fx:id="addressField" />
              <Label text="Date:" />
              <DatePicker fx:id="datePicker" />
              <Label text="Time:" />
              <ComboBox fx:id="timeComboBox" />
              <Label text="Severity:" />
              <HBox spacing="10.0">
                  <RadioButton text="Low">
                  <toggleGroup>
                     <ToggleGroup fx:id="severityGroup" />
                  </toggleGroup>
               </RadioButton>
                  <RadioButton text="Medium" toggleGroup="$severityGroup" />
                  <RadioButton text="High" toggleGroup="$severityGroup" />
              </HBox>
          </VBox>
      
                            <Button fx:id="bookServiceButton" text="Book Service" />
      </VBox>
   </children>
</AnchorPane>
