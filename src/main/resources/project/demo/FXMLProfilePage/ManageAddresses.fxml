<AnchorPane prefHeight="444.0" prefWidth="793.6" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.Profile.ManageAddressesController">
    <children>
        <!-- Header -->
        <VBox layoutX="97.0" layoutY="21.0" prefHeight="62.0" prefWidth="600.0" spacing="10.0">
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Shipping Addresses" />
                <Label style="-fx-text-fill: #666666; -fx-font-size: 14px;" text="Manage your shipping addresses." />
            </children>
        </VBox>

        <!-- Add New Address Button -->
        <HBox alignment="CENTER" layoutX="30.0" layoutY="400.0" prefWidth="640.0" />
      <Button alignment="CENTER" contentDisplay="CENTER" layoutX="159.0" layoutY="380.0" mnemonicParsing="false" onAction="#addAddressButton" prefHeight="42.0" prefWidth="472.0" style="-fx-background-color: #333333; -fx-text-fill: white; -fx-background-radius: 10;" text="+ Add New Address" />
      <ScrollPane hbarPolicy="NEVER" layoutX="97.0" layoutY="103.0" prefHeight="262.0" prefWidth="600.0" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #dcdcdc; -fx-background-color: #f5f5f5;" vbarPolicy="NEVER">
         <content>
            <GridPane fx:id="addressGridPane" alignment="CENTER" prefHeight="14.0" prefWidth="587.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
            </GridPane>
         </content>
      </ScrollPane>
    </children>
   <padding>
      <Insets right="-30.0" />
   </padding>
</AnchorPane>
