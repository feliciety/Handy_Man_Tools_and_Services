<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="332.0" prefWidth="646.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.Profile.payment.CreditCardEditController">
    <!-- Credit/Debit Card Fields -->
    <VBox layoutX="84.0" layoutY="17.0" prefHeight="298.0" prefWidth="478.0" spacing="10.0">
        <TextField fx:id="cardNameField" prefHeight="40.0" prefWidth="247.0" promptText="Name on Card" />
        <TextField fx:id="cardNumberField" prefHeight="40.0" prefWidth="326.0" promptText="Card Number" />
        <HBox spacing="10.0">
            <TextField fx:id="expiryField" prefHeight="40.0" prefWidth="150.0" promptText="MM/YY" />
            <TextField fx:id="cvvField" prefHeight="40.0" prefWidth="150.0" promptText="CVV" />
        </HBox>
        <TextField fx:id="billingAddressField" prefHeight="40.0" prefWidth="326.0" promptText="Billing Address" />
        <TextField fx:id="zipCodeField" prefHeight="40.0" prefWidth="326.0" promptText="Zip Code" />
      <HBox prefHeight="46.0" prefWidth="474.0">
         <children>
            <Button onAction="#onCancel" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #F4F4F5; -fx-border-color: #dcdcdc;" text="Cancel">
               <HBox.margin>
                  <Insets right="175.0" />
               </HBox.margin>
            </Button>
            <Button onAction="#onSave" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #ffdb00; -fx-text-fill: #222222;" text="Save">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </VBox>
</AnchorPane>
