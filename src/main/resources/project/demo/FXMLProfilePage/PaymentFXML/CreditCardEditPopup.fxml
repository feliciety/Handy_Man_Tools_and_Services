<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="398.0" prefWidth="646.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.Profile.PaymentMethod.CreditCardEditController">
    <!-- Credit/Debit Card Fields -->
    <VBox layoutX="84.0" layoutY="27.0" prefHeight="356.0" prefWidth="478.0" spacing="20.0">
      <Label style="-fx-font-weight: bold;" text="Card Holder:" textFill="#2e2929">
         <VBox.margin>
            <Insets bottom="-20.0" />
         </VBox.margin>
      </Label>
        <TextField fx:id="cardNameField" prefHeight="40.0" prefWidth="247.0" promptText="Name on Card" />
      <Label style="-fx-font-weight: bold;" text="Card Number:" textFill="#2e2929">
         <VBox.margin>
            <Insets bottom="-20.0" />
         </VBox.margin>
      </Label>
        <TextField fx:id="cardNumberField" prefHeight="40.0" prefWidth="326.0" promptText="Card Number" />
        <HBox spacing="10.0">
         <VBox>
            <children>
               <Label style="-fx-font-weight: bold;" text="Expiry Date:" textFill="#2e2929" />
                  <TextField fx:id="expiryField" prefHeight="40.0" prefWidth="150.0" promptText="MM/YY" />
            </children>
         </VBox>
         <VBox>
            <children>
               <Label style="-fx-font-weight: bold;" text="CVV:" textFill="#2e2929" />
                  <TextField fx:id="cvvField" prefHeight="40.0" prefWidth="150.0" promptText="CVV" />
            </children>
         </VBox>
         <VBox>
            <children>
               <Label style="-fx-font-weight: bold;" text="Zip Code:" textFill="#2e2929" />
               <TextField fx:id="zipCodeField" prefHeight="40.0" prefWidth="150.0" promptText="CVV" />
            </children>
         </VBox>
        </HBox>
      <Label style="-fx-font-weight: bold;" text="Billing Address:" textFill="#2e2929">
         <VBox.margin>
            <Insets bottom="-20.0" />
         </VBox.margin>
      </Label>
        <TextField fx:id="billingAddressField" prefHeight="40.0" prefWidth="326.0" promptText="Billing Address" />
      <HBox prefHeight="46.0" prefWidth="474.0">
         <children>
            <Button fx:id="cancelButton" onAction="#onCancel" prefHeight="40.0" prefWidth="150.0" stylesheets="@../../styles2.css" text="Cancel">
               <HBox.margin>
                  <Insets right="175.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="saveButton" onAction="#onSave" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #ffdb00; -fx-text-fill: #222222;" stylesheets="@../../styles.css" text="Save">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </HBox>
    </VBox>
</AnchorPane>
