<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="651.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.ShopPageController">
    <VBox prefHeight="661.0" prefWidth="1218.0" spacing="10">

        <!-- Banner -->
        <VBox alignment="CENTER" prefHeight="52.0" prefWidth="1218.0" style="-fx-padding: 10;">
            <Label prefHeight="46.0" prefWidth="238.0" text="Hardware Depot" textAlignment="CENTER">
            <font>
               <Font name="System Bold" size="30.0" />
            </font>
            <VBox.margin>
               <Insets top="10.0" />
            </VBox.margin></Label>
        </VBox>

        <HBox alignment="TOP_LEFT" prefHeight="619.0" prefWidth="1218.0" spacing="5.0">
            <!-- Sidebar -->
            <VBox alignment="CENTER_LEFT" prefHeight="575.0" prefWidth="292.0" spacing="10.0">
            <Pane prefHeight="85.0" prefWidth="242.0" style="-fx-background-color: #E4EAEA; -fx-background-radius: 10;">
               <children>
                  <Label layoutX="9.0" layoutY="9.0" text="Search Here">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                      <TextField fx:id="searchField" layoutX="8.0" layoutY="30.0" prefHeight="40.0" prefWidth="255.0" promptText="Search Product" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Pane>
            <Pane prefHeight="364.0" prefWidth="242.0" style="-fx-background-color: #E4EAEA; -fx-background-radius: 10;">
               <children>
                  <Label layoutX="10.0" layoutY="7.0" text="Categories">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                      <ListView fx:id="categoriesList" layoutX="8.0" layoutY="28.0" prefHeight="318.0" prefWidth="255.0" />
               </children>
            </Pane>
            <Pane prefHeight="74.0" prefWidth="242.0">
               <children>
                  <Pane prefHeight="75.0" prefWidth="271.0" style="-fx-background-color: #E4EAEA; -fx-background-radius: 10;">
                     <children>
                            <Label layoutX="12.0" layoutY="11.0" text="Price Filter">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                         <Slider fx:id="priceSlider" blockIncrement="5" layoutX="12.0" layoutY="32.0" majorTickUnit="20" max="100" min="0" prefHeight="37.0" prefWidth="245.0" showTickLabels="true" showTickMarks="true" value="100" />
                     </children>
                  </Pane>
               </children>
            </Pane>
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            </VBox>
         <ScrollPane prefHeight="584.0" prefWidth="891.0" style="-fx-background-color: transaprent;">
            <content>
                   <GridPane fx:id="productGrid" hgap="10" vgap="10" />
            </content>
            <HBox.margin>
               <Insets left="10.0" />
            </HBox.margin>
         </ScrollPane>
        </HBox>
    </VBox>
</AnchorPane>
