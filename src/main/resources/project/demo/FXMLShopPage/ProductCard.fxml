<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="242.0" prefWidth="217.0" spacing="5.0" style="-fx-border-width: 1; -fx-padding: 10; -fx-background-color: #E4EAEA; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.Shop.ProductCardController">
    <ImageView fx:id="productImage" fitHeight="148.0" fitWidth="182.0" preserveRatio="true" styleClass="rounded-image">
      <VBox.margin>
         <Insets />
      </VBox.margin></ImageView>
    <Label fx:id="productName" alignment="CENTER" prefHeight="18.0" prefWidth="219.0" style="-fx-font-size: 14; -fx-font-weight: bold;" text="Product Name" textAlignment="CENTER">
      <font>
         <Font size="14.0" />
      </font></Label>
    <Label fx:id="productPrice" text="Price: $0.00">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
      <font>
         <Font size="14.0" />
      </font></Label>
    <Button fx:id="addToCartButton" prefHeight="6.0" prefWidth="146.0" styleClass="button_addtocart" stylesheets="@../application.css" text="Add to Cart">
      <font>
         <Font name="Inter Light BETA" size="14.0" />
      </font>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin></Button>
</VBox>
