<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="357.0" prefWidth="250.0" style="-fx-border-width: 1; -fx-padding: 15; -fx-background-color: #E4EAEA; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.demo.controllers.Service.ServiceCardController">
    <ImageView fx:id="serviceImage" fitHeight="162.0" fitWidth="171.0" preserveRatio="true" styleClass="rounded-image">
        <VBox.margin>
            <Insets />
        </VBox.margin>
    </ImageView>
   <Label fx:id="serviceName" alignment="CENTER" prefHeight="78.0" prefWidth="220.0" style="-fx-font-size: 20; -fx-text-fill: black; -fx-font-weight: bold;" text="Service" textAlignment="CENTER" wrapText="true">
      <font>
         <Font name="System Bold" size="12.0" />
      </font>
   </Label>
    <Label fx:id="servicePrice" text="Price Range: $0.00">
        <VBox.margin>
            <Insets bottom="5.0" top="-10.0" />
        </VBox.margin>
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    <Label fx:id="serviceDescription" alignment="CENTER" prefHeight="57.0" prefWidth="154.0" style="-fx-font-size: 12; -fx-text-fill: gray;" text="Short description of the homeService" textAlignment="CENTER" wrapText="true">
        <VBox.margin>
            <Insets top="-10.0" />
        </VBox.margin>
        <font>
            <Font size="12.0" />
        </font>
    </Label>
    <Button fx:id="bookNowButton" prefHeight="30.0" prefWidth="146.0" styleClass="button_booknow" stylesheets="@../application.css" text="Book Now">
        <font>
            <Font name="Inter Light BETA" size="14.0" />
        </font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
</VBox>
